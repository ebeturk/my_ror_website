<div class="categories-container">
  <div class="d-inline-block">
    <%= link_to "All", articles_path, class: "btn #{'btn-category' unless params[:category]} btn-outline-category" %>
  </div>

  <% Article.categories.each do |category_name, category_value| %>
    <div class="d-inline-block mx-2">
      <%= link_to category_name.capitalize, articles_path(category: category_name),
                  class: "btn #{'btn-category' if params[:category] == category_name} btn-outline-category" %>
    </div>
  <% end %>
</div>
