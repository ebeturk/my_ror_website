        <%= link_to 'Lyrics', "#", class: 'btn btn-secondary btn-sm', data: { bs_toggle: "collapse", bs_target: "#lyrics-#{music.id}" } %>
        <div id="lyrics-<%= music.id %>" class="collapse">
          <p><%= music.lyrics %></p>
        </div>
        <% if music.url.present? %>
          <p>Listen on: <%= link_to music.url, music.url, target: "_blank" %></p>
          <audio controls>
            <source src="<%= music.url %>" type="audio/mp3">
            Your browser does not support the audio element.
          </audio>

        <% end %>
        <p>Release Date: <%= music.release_date %></p>
      </div>
    <% end %>
  </section>

</div>
